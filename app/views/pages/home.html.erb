<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div class="search-bar">
    <%= form.text_field :query, placeholder: "Find products...", value: params[:query] %>
    <%= form.submit "Search" %>
  </div>
<% end %>

<div class="store-logos d-flex justify-content-center gap-3 mb-4">
  <% @stores.each do |store| %>
    <%= link_to root_path(store_id: store.id), class: "store-link" do %>
      <%= image_tag store.logo_url, alt: store.name, class: "store-logo #{'active-logo' if params[:store_id].to_i == store.id}" %>
    <% end %>
  <% end %>
</div>

<div id="search-results">
  <%= render "search_results", deals: @deals %>
</div>