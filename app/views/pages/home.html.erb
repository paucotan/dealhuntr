<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div class="search-bar">
    <%= form.text_field :query, placeholder: "Find products...", value: params[:query] %>
    <%= form.submit "Search" %>
  </div>
<% end %>

<div id="search-results">
  <%= render "search_results", deals: @deals %>
</div>
