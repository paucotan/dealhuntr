<div class="navbar fixed-bottom navbar-dark navbar-dealhuntr d-lg-none">
  <div class="container-fluid d-flex justify-content-around">
    <!-- Navbar for mobile devices -->

    <!-- Home Icon (Orange when active) -->
    <%= link_to root_path, class: "nav-link #{'active-icon' if current_page?(root_path)}" do %>
      <i class="fa-solid fa-house fa-2x"></i>
    <% end %>

    <!-- Shopping List Icon (Orange when active) -->
    <%= link_to shopping_lists_path, class: "nav-link #{'active-icon' if current_page?(shopping_lists_path)}" do %>
      <i class="fa-solid fa-list-check fa-2x"></i>
    <% end %>

    <!-- User Dashboard Icon (Orange when active) -->
    <%= link_to (user_signed_in? ? dashboard_path : new_user_session_path), class: "nav-link #{'active-icon' if current_page?(dashboard_path)}" do %>
      <i class="fa-solid fa-user fa-2x"></i>
    <% end %>

  </div>
</div>
    <!-- Navbar for large screens -->

<!-- Desktop Navbar (Fixed Top, Minimalist) -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-dealhuntr fixed-top d-none d-lg-flex" >
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand #{'active-icon' if current_page?(root_path)}" do %>
      <i class="fa-solid fa-house fa-lg"></i>
    <% end %>

    <div class="ms-auto d-flex gap-3">
      <!-- Shopping List Icon (Orange when active) -->
      <%= link_to shopping_lists_path, class: "nav-link #{'active-icon' if current_page?(shopping_lists_path)}" do %>
        <i class="fa-solid fa-list-check fa-lg"></i>
      <% end %>
      <!-- User Dashboard Icon (Orange when active) -->
      <%= link_to (user_signed_in? ? dashboard_path : new_user_session_path), class: "nav-link #{'active-icon' if current_page?(dashboard_path)}" do %>
        <i class="fa-solid fa-user fa-lg"></i>
      <% end %>
    </div>
  </div>
</nav>
