<div class="expanded-content">
  <div class="product-frame">
    <div class="product-image-card">
      <%= image_tag deal.product.image_url, class: "card-img-top" %>
      <div class="deal-prices">
        <p class="text-muted">€ <%= deal.price %></p>
        <p class="discounted-price-text font-weight-bold">€ <%= deal.discounted_price %></p>
      </div>
    </div>
    <div class="product-info">
      <div class="details">

        <h2 class="product-name"><%= deal.product.name %></h5>
        <p class="expiry-date">Exp.: <%= deal.expiry_date.strftime("%d/%m/%Y") %></p>
        <p>Quantity</p>
        <p>Deal discount type</p>
        <%= image_tag deal.store.logo_url, class: "choosen_store_id", style:"height: 50px; width: 50px;" %>
      </div>
      <%= button_to "Add To List", shopping_lists_path(deal_id: deal.id), method: :post, class: "btn btn-warning btn-sm add-to-list", data: { action: "click->deal#preventExpand" } %>
    </div>
  </div>
  <div class="other-stores">
    <% related_deals.each do |related_deal| %>
      <div class="small-store-card">
        <%= image_tag related_deal.store.logo_url, class: "store-logo-small" %>
        <p class="store-price font-weight-bold">
          €<%= related_deal.discounted_price || related_deal.price %>
        </p>
      </div>
    <% end %>
  </div>
</div>
