<div class="expanded-content p-3">
  <div class="top-section">

    <div class="details">
      <h5 class="product-name"><%= deal.product.name %></h5>
      <%= image_tag deal.store.logo_url, class: "store-logo-small", style:"height: 50px; width: 50px;" %>
      <p class="expiry-date">Exp.: <%= deal.expiry_date.strftime("%d/%m/%Y") %></p>
      <p class="deal-price">
        <del class="text-muted">€<%= deal.price %></del>
        <span class="text-warning font-weight-bold">€<%= deal.discounted_price %></span>
      </p>
    </div>

    <button class="btn btn-warning btn-sm add-to-list">Add To List</button>
  </div>

  <div class="other-stores mt-3">
    <% related_deals.each do |related_deal| %>
      <div class="small-store-card">
        <%= image_tag related_deal.store.logo_url, class: "store-logo-small" %>
        <p class="store-price font-weight-bold">
          €<%= related_deal.discounted_price || related_deal.price %>
        </p>
      </div>
    <% end %>
  </div>
</div>
